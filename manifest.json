{
  "manifest_version":     2,
  "version":              "2.0.6",
  "name":                 "十阅十阅",
  "description":          "十阅是一款高效率的主动式新闻阅读器,随时获取网站的热门文章,资讯及优惠信息，充分利用碎片化时间",
  "icons":                {
    "128": "icon/128.png",
    "16":  "icon/16.png",
    "48":  "icon/48.png"
  },
  "author":               "wtser",
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "background":           {
    "persistent": false,
    "scripts":    [
      "script/background.js"
    ]
  },
  "browser_action":       {
    "default_icon":  "icon/48.png",
    "default_popup": "index.html",
    "default_title": "十阅十阅"
  },
  "options_page":         "index.html#/option/store",
  "permissions":          [
    "notifications",
    "http://*/",
    "https://*/"
  ]
}
